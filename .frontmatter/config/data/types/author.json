{
  "$schema": "https://beta.frontmatter.codes/config/data.types.schema.json",
  "id": "author",
  "schema": {
    "type": "object",
    "title": "Author",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name"
      },
      "email": {
        "type": "string",
        "title": "Email"
      },
      "website": {
        "type": "string",
        "title": "Website"
      },
      "twitter": {
        "type": "string",
        "title": "Twitter URL"
      },
      "github": {
        "type": "string",
        "title": "GitHub Username"
      },
      "linkedin": {
        "type": "string",
        "title": "LinkedIn URL"
      },
      "bio": {
        "type": "string",
        "title": "Biography"
      },
      "avatar": {
        "type": "string",
        "title": "Avatar"
      }
    }
  }
}
