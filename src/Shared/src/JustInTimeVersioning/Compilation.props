<Project>
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Title>JustinWritesCode Version Synchronizer</Title>
    <Description>Keeps central version records in sync with the repos</Description>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <SlnGenSolutionFolder>src</SlnGenSolutionFolder>
    <AssemblyName>JustInTimeVersioning</AssemblyName>
    <RootNamespace>JustInTimeVersioning</RootNamespace>
    <OutputPath>lib/</OutputPath>
    <MinVerTagPrefix>jit-v</MinVerTagPrefix>
    <EnableGlobalCodeGenerators>false</EnableGlobalCodeGenerators>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" />
    <PackageReference Include="Microsoft.Build"  />
    <PackageReference Include="MSBuild.Usings"  />
    <PackageReference Include="System.Text.Json" PrivateAssets="None" />
    <PackageReference Include="System.Text.Json.Usings" PrivateAssets="None" />
    <PackageReference Include="JustinWritesCode.RegexDtoGenerator" IncludeAssets="Analyzers" ExcludeAssets="Compile;Runtime;Lib;Native" />
  </ItemGroup>
  <ItemGroup Label="Global Usings">
  </ItemGroup>
  <Import Project="./JustInTimeVersioning.props" />
  <Import Project="./JustInTimeVersioning.targets" />
</Project>
